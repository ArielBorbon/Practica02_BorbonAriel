<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        tools:context=".MainActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.4" />

        <ImageView
            android:id="@+id/imgBannerJohnWick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="16:9"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bannerjohnwick" />

        <ImageView
            android:id="@+id/imgMainJohnWick"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBannerJohnWick"
            app:srcCompat="@drawable/johnwick" />

        <Button
            android:id="@+id/btnRentar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/naranja"
            android:text="@string/rentar"
            app:layout_constraintEnd_toStartOf="@+id/btnComprar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgMainJohnWick" />

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/amarillo"
            android:text="@string/comprar"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toEndOf="@+id/btnRentar"
            app:layout_constraintTop_toTopOf="@+id/btnRentar" />

        <TextView
            android:id="@+id/txtTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/nombre_pelicula"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/btnDescargar"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/imgBannerJohnWick" />

        <ImageView
            android:id="@+id/btnDescargar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtTitulo"
            app:srcCompat="@drawable/ic_save" />

        <ImageView
            android:id="@+id/imgEstrella"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/txtTitulo"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/txtCalificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/calificacion"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgEstrella"
            app:layout_constraintStart_toEndOf="@+id/imgEstrella"
            app:layout_constraintTop_toTopOf="@+id/imgEstrella" />

        <TextView
            android:id="@+id/txtVistas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/vistas"
            app:layout_constraintBottom_toBottomOf="@+id/imgEstrella"
            app:layout_constraintStart_toEndOf="@+id/txtCalificacion"
            app:layout_constraintTop_toTopOf="@+id/imgEstrella" />

        <TextView
            android:id="@+id/txtGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-black"
            android:text="@string/genero"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/imgEstrella" />

        <TextView
            android:id="@+id/btnAccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/accion"
            android:textColor="@color/azul"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintEnd_toStartOf="@+id/btnDisparos"
            app:layout_constraintTop_toBottomOf="@+id/txtGenero"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/btnDisparos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/disparos"
            android:textColor="@color/azul"
            app:layout_constraintStart_toEndOf="@+id/btnAccion"
            app:layout_constraintEnd_toStartOf="@+id/btnDrama"
            app:layout_constraintTop_toTopOf="@+id/btnAccion"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/btnDrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drama"
            android:textColor="@color/azul"
            app:layout_constraintStart_toEndOf="@+id/btnDisparos"
            app:layout_constraintEnd_toStartOf="@+id/btnHechosReales"
            app:layout_constraintTop_toTopOf="@+id/btnAccion"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/btnHechosReales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hechos_reales"
            android:textColor="@color/azul"
            app:layout_constraintStart_toEndOf="@+id/btnDrama"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnAccion"
            android:layout_marginEnd="16dp"/>
        <TextView
            android:id="@+id/txtSinopsis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:text="@string/sinopsis"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline"
            app:layout_constraintTop_toBottomOf="@+id/btnAccion" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSinopsis"
            app:srcCompat="@drawable/corazon" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:srcCompat="@drawable/like" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>